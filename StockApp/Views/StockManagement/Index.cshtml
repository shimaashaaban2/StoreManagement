@model IEnumerable<StockApp.Models.Purchase>
@{
    ViewBag.Title = "Get Item";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<div class="row">
    <div class="card">
        <div class="card-body">
            <h3>@ViewData["Title"]</h3>
            <div class="row">
                <div class="col-md-3">
                    <a class="btn btn-primary" asp-action="Getitems" asp-controller="StockManagement">
                       Get Items
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                        </svg>
                        @*<i class="bi bi-plus"></i>*@
                    </a>
                </div>
                <div class="col-md-9">
                    <table class="table table-striped table-bordered table-responsive">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Id)</th>
                                 <th>@Html.DisplayNameFor(model => model.ItemName)</th>

                                <th>@Html.DisplayNameFor(model => model.StoreName)</th>
                                <th>@Html.DisplayNameFor(model => model.price)</th>
                                <th>@Html.DisplayNameFor(model => model.count)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                               
                                    <tr>
                                        <th>@item.Id</th>
                                        <td>@item.ItemName</td>
                                        <td>@item.StoreName</td>
                                        <td>@item.price</td>
                                        <td>@item.count</td>
                                        <td>
                                            <a asp-action="changeItems" asp-controller="StockManagement" asp-route-Id="@item.Id" class="btn btn-info ml-2">Change Data Item</a>
                                        </td>
                                    </tr>
                                    }
                                 }
                                     else
                                         {
                                            <tr>
                                        <td colspan="7"> No Data available</td>
                                             
                                            </tr>
                                          }
                        </tbody>
                       
                    </table>


                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div id="form-group">
                        <label>Items</label>
                        <select class="form-control" id="item">
                            <option>Select Item</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div id="form-group">
                        <label>Stores</label>
                        <select class="form-control" id="store">
                            <option>Select Store</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/Scripts/Item.js"></script>
