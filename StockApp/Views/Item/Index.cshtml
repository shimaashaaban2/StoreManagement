@model IEnumerable<StockApp.Models.Item>
@{
    ViewBag.Title = "Add Item";
}
<div class="row">
       <div class="card">
        <div class="card-body">
            <h3>@ViewData["Title"]</h3>
            <div class="row">
                <div class="col-md-3">
                    <a class="btn btn-primary" asp-action="AddItem" asp-controller="Item">
                        New Item
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                        </svg>
                        
                        </a>
                </div>
                <div class="col-md-9">
                    <table class="table table-striped table-bordered table-responsive">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                                    <th>@Html.DisplayNameFor(model => model.Name)</th>
  
                                    <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                        <tbody>
                      @if (Model != null && Model.Any())
                        {

                        @foreach(var item in Model)
                       {
                       
                                <tr>
                                    <th>@item.Id</th>
                                    <td>@item.Name</td>
                                    <td>@item.Quantity</td>
                                    <td>
                                    <a asp-action="EditItem" asp-controller="Item" asp-route-Id="@item.Id" class="btn btn-info ml-2">Edit</a>
                                        <a asp-action="DeleteItem" asp-controller="Item" asp-route-Id="@item.Id" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>

                               }
                              }
                                    else
                                    {
                                    <tr>
                                        <td> No Data available</td>

                                    </tr>
                                    }
                            </tbody>
                            
                        </table>
                  
                   
                </div>
            </div>
        </div>
    </div>
</div>


